# Environment Configuration for Stock Analysis Application
# Generated by Ansible deployment

# Application
APP_NAME={{ app_name }}
APP_ENV={{ app_env | default('production') }}
APP_DEBUG={{ app_debug | default('false') }}
APP_ROOT={{ app_root }}
APP_DOMAIN={{ app_domain | default('localhost') }}

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE={{ mysql_database }}
DB_USERNAME={{ mysql_user }}
DB_PASSWORD={{ mysql_password }}

# Python
PYTHON_PATH={{ app_root }}/venv/bin/python
PYTHON_ANALYSIS_SCRIPT={{ app_root }}/python_analysis/analysis.py

# Paths
LOG_PATH={{ app_root }}/logs
DATA_PATH={{ app_root }}/data
TEMP_PATH={{ app_root }}/temp
UPLOAD_PATH={{ app_root }}/uploads

# CSV File Paths (Legacy)
PORTFOLIO_CSV={{ app_root }}/data/chatgpt_portfolio_update.csv
TRADE_LOG_CSV={{ app_root }}/data/chatgpt_trade_log.csv

# Security
SESSION_SECRET={{ lookup('password', '/dev/null length=64 chars=ascii_letters,digits') }}
ENCRYPTION_KEY={{ lookup('password', '/dev/null length=32 chars=ascii_letters,digits') }}

# API Keys (set these manually or via vault)
ALPHA_VANTAGE_API_KEY={{ alpha_vantage_api_key | default('') }}
YAHOO_FINANCE_API_KEY={{ yahoo_finance_api_key | default('') }}

# Email Configuration (optional)
MAIL_HOST={{ mail_host | default('localhost') }}
MAIL_PORT={{ mail_port | default('25') }}
MAIL_USERNAME={{ mail_username | default('') }}
MAIL_PASSWORD={{ mail_password | default('') }}
MAIL_FROM_ADDRESS={{ mail_from_address | default('noreply@' + app_domain) }}
MAIL_FROM_NAME={{ mail_from_name | default(app_name) }}

# Cache
CACHE_DRIVER=file
CACHE_PATH={{ app_root }}/data/cache

# Session
SESSION_DRIVER=file
SESSION_PATH={{ app_root }}/data/sessions
SESSION_LIFETIME=120

# Feature Flags
ENABLE_PYTHON_ANALYSIS=true
ENABLE_BANK_IMPORT=true
ENABLE_API=true

# Logging
LOG_LEVEL={{ log_level | default('warning') }}
LOG_MAX_FILES=30
