        $downloadLogUrl = "download_import_log.php?file=" . urlencode($stagingFile);

        $view->renderSuccessPage($rows, $accountName, $viewTransactionsUrl, $downloadLogUrl);
        exit;
    } catch (Throwable $e) {
        $view->renderErrorPage('Import Error', 'An error occurred during the import process:', $e);
        exit;
    }
}

