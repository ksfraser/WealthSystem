# Stock Analysis Application - Environment Configuration
# Copy this file to .env and update with your actual values

# ===== APPLICATION SETTINGS =====
APP_NAME=stock-analysis
APP_DOMAIN=example.com
APP_ENV=production
APP_DEBUG=false
APP_PORT=8080

# ===== NETWORK SETTINGS =====
NETWORK_NAME=stock-analysis-network

# ===== DATABASE SETTINGS =====
MYSQL_ROOT_PASSWORD=changeme
MYSQL_DATABASE=stock_analysis
MYSQL_USER=stock_app
MYSQL_APP_PASSWORD=changeme
MYSQL_PORT=3306

# Database connection (for application)
DB_HOST=db
DB_PORT=3306
DB_DATABASE=stock_analysis
DB_USERNAME=stock_app
DB_PASSWORD=changeme

# ===== REDIS CACHE SETTINGS =====
REDIS_PASSWORD=changeme
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_MAXMEMORY=256mb

# Redis connection (for application)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme
REDIS_DATABASE=0

# ===== MANAGEMENT TOOLS PORTS =====
# These services are optional and can be started with: docker-compose --profile tools up -d
PHPMYADMIN_PORT=8081
REDIS_COMMANDER_PORT=8082

# ===== APPLICATION PATHS =====
APP_ROOT=/var/www/stock-analysis
PYTHON_PATH=/var/www/stock-analysis/venv/bin/python

# ===== MIGRATIONS =====
RUN_MIGRATIONS=true

# ===== API KEYS (Optional) =====
# Alpha Vantage API Key for stock data
ALPHA_VANTAGE_API_KEY=

# Yahoo Finance API Key (if using premium)
YAHOO_FINANCE_API_KEY=

# ===== PHP SETTINGS =====
PHP_VERSION=8.2
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_EXECUTION_TIME=300

# ===== PYTHON SETTINGS =====
PYTHON_VERSION=3.11

# ===== TIMEZONE =====
TZ=America/New_York

# ===== LOGGING =====
LOG_LEVEL=info
LOG_PATH=/var/www/stock-analysis/logs

# ===== SESSION =====
SESSION_LIFETIME=120
SESSION_PATH=/var/www/stock-analysis/data/sessions

# ===== CACHE =====
CACHE_DRIVER=redis
CACHE_TTL=3600

# ===== SECURITY =====
# Generate a secure random string for production
APP_KEY=base64:changeme_generate_secure_key

# ===== CORS SETTINGS =====
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ===== DEPLOYMENT SETTINGS =====
# Set to true when deploying from Git repository
DEPLOY_FROM_GIT=false

# Set to true to run database migrations on deployment
RUN_MIGRATIONS_ON_DEPLOY=true

# ===== MONITORING =====
# Enable performance monitoring
ENABLE_MONITORING=false

# APM Server URL (if using application performance monitoring)
APM_SERVER_URL=

# ===== BACKUP SETTINGS =====
# Enable automatic backups
ENABLE_BACKUPS=false

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention days
BACKUP_RETENTION_DAYS=7

# ===== EMAIL SETTINGS (Optional) =====
# For alert notifications
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Stock Analysis"

# ===== ALERTS =====
# Enable alert notifications
ENABLE_ALERTS=true

# Alert check interval (minutes)
ALERT_CHECK_INTERVAL=15

# Alert recipients (comma-separated emails)
ALERT_RECIPIENTS=admin@example.com

# ===== PERFORMANCE =====
# Enable query caching
ENABLE_QUERY_CACHE=true

# Query cache TTL (seconds)
QUERY_CACHE_TTL=300

# Enable response compression
ENABLE_COMPRESSION=true

# ===== DEVELOPMENT SETTINGS =====
# Enable development tools (only for development environments)
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILER=false

# ===== DOCKER COMPOSE PROFILES =====
# Available profiles: tools
# To start with tools: docker-compose --profile tools up -d
# Tools include: phpMyAdmin, Redis Commander
